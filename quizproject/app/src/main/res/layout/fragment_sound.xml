<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradiente"
    tools:context=".Fragments.SoundFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/frg_sound_question"
        android:layout_width="324dp"
        android:layout_height="48dp"
        android:layout_marginTop="21dp"
        android:gravity="center"
        android:text="@string/hello_blank_fragment"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/frg_sound_ans1"
        android:layout_width="349dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/button"
        app:layout_constraintBottom_toTopOf="@+id/frg_sound_ans2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frg_sound_replayAudio" />

    <Button
        android:id="@+id/frg_sound_ans2"
        android:layout_width="349dp"
        android:layout_height="48dp"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:text="@string/button"
        app:layout_constraintBottom_toTopOf="@+id/frg_sound_ans3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frg_sound_ans1" />

    <Button
        android:id="@+id/frg_sound_ans3"
        android:layout_width="349dp"
        android:layout_height="48dp"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:text="@string/button"
        app:layout_constraintBottom_toTopOf="@+id/frg_sound_ans4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frg_sound_ans2" />

    <Button
        android:id="@+id/frg_sound_ans4"
        android:layout_width="349dp"
        android:layout_height="48dp"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="37dp"
        android:text="@string/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frg_sound_ans3" />

    <Button
        android:id="@+id/frg_sound_solution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="68dp"
        android:background="@color/colorAccentAplha"
        android:text="@string/solucion"
        app:layout_constraintBottom_toTopOf="@+id/frg_sound_ans1"
        app:layout_constraintEnd_toStartOf="@+id/frg_sound_replayAudio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frg_sound_question" />

    <Button
        android:id="@+id/frg_sound_replayAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:background="@color/colorAccentAplha"
        android:text="@string/replay_audio"
        app:layout_constraintBottom_toTopOf="@+id/frg_sound_ans1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/frg_sound_solution"
        app:layout_constraintTop_toBottomOf="@+id/frg_sound_question" />

</android.support.constraint.ConstraintLayout>