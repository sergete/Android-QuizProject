<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frg_loadUsers_lv"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/frg_loadUsers_lv_container"
        android:layout_width="383dp"
        android:layout_height="116dp"
        android:background="@color/cancelColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/frg_loadUsers_txtContainer"
            android:layout_width="245dp"
            android:layout_height="77dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="131dp"
            android:layout_marginLeft="131dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="7dp"
            android:text="Muestra TextView"
            android:textColor="@color/title_textColor"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/frg_loadUsers_imageContainer"
            android:layout_width="wrap_content"
            android:layout_height="113dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="-123dp"
            android:layout_marginRight="-123dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/frg_loadUsers_txtContainer"
            android:layout_toLeftOf="@+id/frg_loadUsers_txtContainer"
            tools:srcCompat="@tools:sample/backgrounds/scenic[15]" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>