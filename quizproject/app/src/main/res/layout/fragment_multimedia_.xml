<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente"
    tools:context=".Fragments.Multimedia_Fragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/frg_sound_question"
        android:layout_width="333dp"
        android:layout_height="74dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/hello_blank_fragment"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/frg_multimedia_ans1"
        android:layout_width="349dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:text="@string/button"
        app:layout_constraintBottom_toTopOf="@+id/frg_multimedia_ans2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frg_multimedia_solution"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button
        android:id="@+id/frg_multimedia_ans2"
        android:layout_width="349dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:text="@string/button"
        app:layout_constraintBottom_toTopOf="@+id/frg_multimedia_ans3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frg_multimedia_ans1" />

    <Button
        android:id="@+id/frg_multimedia_ans3"
        android:layout_width="349dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:text="@string/button"
        app:layout_constraintBottom_toTopOf="@+id/frg_multimedia_ans4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frg_multimedia_ans2" />

    <Button
        android:id="@+id/frg_multimedia_ans4"
        android:layout_width="349dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="37dp"
        android:text="@string/button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frg_multimedia_ans3" />

    <Button
        android:id="@+id/frg_multimedia_solution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="130dp"
        android:layout_marginRight="130dp"
        android:background="@color/colorAccentAplha"
        android:text="@string/solucion"
        app:layout_constraintBottom_toTopOf="@+id/frg_multimedia_ans1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frg_sound_question" />

</android.support.constraint.ConstraintLayout>